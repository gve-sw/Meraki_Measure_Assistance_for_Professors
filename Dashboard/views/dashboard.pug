                        .progressbar__fill
                    td.line
                      .dailyattendance.progressbar.progressbar--small.progressbar--dark(data-percentage=100, data-prof=(prof.name).replace(" ", "_"), data-time='19')
                        .progressbar__fill
                    td.line
                      .dailyattendance.progressbar.progressbar--small.progressbar--dark(data-percentage=100, data-prof=(prof.name).replace(" ", "_"), data-time='20')
                        .progressbar__fill
                    td.line
                      .dailyattendance.progressbar.progressbar--small.progressbar--dark(data-percentage=100, data-prof=(prof.name).replace(" ", "_"), data-time='21')
                        .progressbar__fill
